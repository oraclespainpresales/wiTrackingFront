<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../fragments/head %>
</head>

<body>

<% include ../fragments/nav %>

<!-- Page Content -->
<div class="container">

  <!-- Jumbotron Header -->
  <header class="jumbotron my-4">
    <h1 class="display-5" id="username"><%= user.fullname %></h1>
    <p class="display-12" id="role"><%= user.role %></p>
    <p class="lead">
    </p>
  </header>

  <!-- Page Features -->
  <div class="row">
    <div id="message" ></div>
    <div class="col-lg-12 text-center">
      <div class="card">
        <form id="createForm" action="/tracker/doPOCreate" method="POST">
        <div class="card-header">
          <h4>Create PO</h4>
        </div>
        <div class="card-body text-left">
           <div class="form-group">
             <label for="supplierID">SupplierID:</label>
             <input type="text" class="form-control" id="supplierID" name="supplierID" placeholder="e.g. lee.supplies">
           </div>
           <div class="form-group">
             <label for="model">Product Model:</label>
             <input type="text" class="form-control" id="model" name="model" placeholder="e.g.  RS77071">
           </div>
           <div class="form-group">
             <label for="quantity">Quantity:</label>
             <input type="text" class="form-control" id="quantity" name="quantity" placeholder="e.g. 1">
           </div>
           <div class="form-group">
             <label for="estDeliveryDate">Requested Delivery Date:</label>
             <input type="text" class="form-control" id="estDeliveryDate" name="estDeliveryDate" placeholder="e.g. 2018-07-03">
           </div>
           <div class="form-group">
             <label for="deliveryLocation">Requested Delivery Location:</label>
             <input type="text" class="form-control" id="deliveryLocation" name="deliveryLocation" placeholder="e.g. Madrid">
           </div>

        </div>
        <div class="card-footer">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
      </div>
    </div>

    &nbsp;
  </div>
  <!-- /.row -->

</div>
<!-- /.container -->

<% include ../fragments/footer %>

<!-- Bootstrap core JavaScript -->
<script src="/resources/jquery/jquery.min.js"></script>
<script src="/resources/bootstrap/js/bootstrap.bundle.min.js"></script>

<script type="text/javascript">
$("#createForm").submit(function(event) {
    event.preventDefault();
    var post_url = $(this).attr("action");
    var form_data = $(this).serialize();
    $.post( post_url, form_data, function( response ) {
      $("#message").html( response );
    });
});
</script>

</body>

</html>
